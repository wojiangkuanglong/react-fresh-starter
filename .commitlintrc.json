{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-empty": [
      2,
      "never"
    ],
    "type-case": [
      2,
      "always",
      "lower-case"
    ],
    "subject-empty": [
      2,
      "never"
    ],
    "body-empty": [
      2,
      "always"
    ],
    "footer-empty": [
      2,
      "always"
    ],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "wip",
        "release"
      ]
    ]
  }
}
