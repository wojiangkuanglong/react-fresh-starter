{
  "name": "react-fresh-starer",
  "description": "react项目启动模板",
  "homepage": "https://github.com/wojiangkuanglong/react-fresh-starter",
  "private": false,
  "packageManager": "pnpm@10.25.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "turbo run dev",
    "dev:app": "pnpm -F @repo/web run dev",
    "api": "pnpm -F @repo/services api",
    "build": "turbo run build",
    "build:app": "pnpm -F @repo/web build",
    "lint": "turbo lint",
    "type-check": "turbo run type-check",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "clean": "turbo run clean && rimraf node_modules .turbo",
    "taze": "pnpm dlx taze -r"
  },
  "engines": {
    "node": ">=22.12.0",
    "pnpm": ">=10.25.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/prompt-cli": "^20.2.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "catalog:",
    "turbo": "^2.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
